<?xml version="1.0" encoding="utf-8" ?>
<openerp>
<data>
  <record id="account_invoice_view_form" model="ir.ui.view">
      <field name="name">account.invoice - Klik Pajak</field>
      <field name="model">account.invoice</field>
      <field
                name="inherit_id"
                ref="l10n_id_taxform_faktur_pajak_common.account_invoice_view_form"
            />
      <field name="arch" type="xml">
          <data>
              <xpath expr="//group[@name='taxform_2']" position="before">
                    <button
                            name="action_klikpajak_submit_sale_invoice"
                            type="object"
                            string="Submit"
                            class="oe_highlight"
                            colspan="2"
                            attrs="{'invisible':[('klik_pajak_submit_ok','=',False)]}"
                        />
                    <button
                            name="action_klikpajak_approve_sale_invoice"
                            type="object"
                            string="Approve"
                            class="oe_highlight"
                            colspan="2"
                            attrs="{'invisible':[('klik_pajak_approve_ok','=',False)]}"
                        />
                    <button
                            name="action_klikpajak_cancel_sale_invoice"
                            type="object"
                            string="Cancel"
                            colspan="2"
                            attrs="{'invisible':[('klik_pajak_cancel_ok','=',False)]}"
                        />
                    <button
                            name="action_klikpajak_resubmit_sale_invoice"
                            type="object"
                            string="Resubmit"
                            colspan="2"
                            attrs="{'invisible':[('klik_pajak_resubmit_ok','=',False)]}"
                        />
                  <group name="klikpajak" string="Klikpajak" colspan="4" col="2">

                      <field name="klikpajak_id" string="ID" />
                      <field name="klik_pajak_submit_ok" invisible="1" />
                      <field name="klik_pajak_approve_ok" invisible="1" />
                      <field name="klik_pajak_cancel_ok" invisible="1" />
                      <field name="klik_pajak_resubmit_ok" invisible="1" />
                      <field name="klikpajak_invoice_status" string="Invoice Status" />
                      <field
                                name="klikpajak_approval_status"
                                string="Approval Status"
                            />
                      <field name="klikpajak_cancel_status" string="Cancel Status" />
                      <field
                                name="klikpajak_qrcode_link"
                                string="QR Link"
                                widget="url"
                            />
                      <field
                                name="klikpajak_invoice_link"
                                string="Invoice Link"
                                widget="url"
                            />
                  </group>
              </xpath>
          </data>
      </field>
  </record>

</data>
</openerp>
