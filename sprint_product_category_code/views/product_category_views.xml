<openerp>
<data>
    <record model="ir.ui.view" id="product_category_list_view">
        <field name="name">product.category.code.tree</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_list_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='complete_name']" position="before">
                <field name="code" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="product_category_form_view">
        <field name="name">product.category.code.form</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_title']" position="replace">
                <h1>
                    <field name="code" placeholder="Code..." class="oe_inline" />
                    <label string=" - " class="oe_inline" />
                    <field name="name" placeholder="Name..." class="oe_inline" />
                </h1>
            </xpath>
        </field>
    </record>
</data>
</openerp>
