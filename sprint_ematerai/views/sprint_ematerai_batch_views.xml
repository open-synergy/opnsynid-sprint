<openerp>
    <data>
        <record id="sprint_ematerai_batch_view_tree" model="ir.ui.view">
            <field name="name">sprint.ematerai_batch - Tree</field>
            <field name="model">sprint.ematerai_batch</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="id" invisible="1" />
                    <field name="display_name" string="# Document" />
                    <field name="date" string="Date" />
                    <field name="type_id" string="Type" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record id="sprint_ematerai_batch_view_search" model="ir.ui.view">
            <field name="name">sprint.ematerai_batch - Search</field>
            <field name="model">sprint.ematerai_batch</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <search>
                    <field name="id" />
                    <field name="name" />
                    <field name="company_id" groups="base.group_multi_company" />
                    <field name="type_id" />
                    <field name="user_id" />
                    <field name="state" />
                    <!-- Filter -->
                    <filter
                        name="dom_my_data"
                        string="My Responsibilities"
                        domain="[('user_id','=',uid)]"
                    />
                    <group name="dom_state" string="States">
                        <filter
                            name="dom_draft"
                            string="Draft"
                            domain="[('state','=','draft')]"
                        />
                        <filter
                            name="dom_confirm"
                            string="Waiting for generated"
                            domain="[('state','=','confirm')]"
                        />
                        <filter
                            name="dom_generate"
                            string="Generated"
                            domain="[('state','=','generate')]"
                        />
                    </group>
                    <!-- Group -->
                    <group name="group_by" string="Group By">
                        <filter
                            name="grp_date"
                            string="Date"
                            context="{'group_by':'date'}"
                        />
                        <filter
                            name="grp_type_id"
                            string="E-Materai Type"
                            context="{'group_by':'type_id'}"
                        />
                        <filter
                            name="grp_company"
                            string="Company"
                            groups="base.group_multi_company"
                            context="{'group_by':'company_id'}"
                        />
                        <filter
                            name="grp_responsible"
                            string="Responsible"
                            context="{'group_by':'user_id'}"
                        />
                        <filter
                            name="grp_state"
                            string="State"
                            context="{'group_by': 'state'}"
                        />
                    </group>
                </search>
            </field>
        </record>

        <record id="sprint_ematerai_batch_view_form" model="ir.ui.view">
            <field name="name">sprint.ematerai_batch - Form</field>
            <field name="model">sprint.ematerai_batch</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button
                            name="action_confirm"
                            type="object"
                            string="Confirm"
                            class="oe_highlight"
                            attrs="{'invisible':[('state','!=','draft')]}"
                            confirm="Confirm batch. Are you sure?"
                        />
                        <button
                            name="action_generate_ematerai"
                            type="object"
                            string="Generate"
                            class="oe_highlight"
                            attrs="{'invisible':['|',('state','!=','confirm'),('all_success','=', True)]}"
                            confirm="Generate E-Materai. Are you sure?"
                        />
                        <button
                            name="action_generate_batch"
                            type="object"
                            string="Finish"
                            class="oe_highlight"
                            attrs="{'invisible':['|',('state','!=','confirm'),('all_success','!=', True)]}"
                            confirm="Finish E-Materai. Are you sure?"
                        />
                        <button
                            name="action_cancel"
                            type="object"
                            string="Cancel"
                            attrs="{'invisible':[('state','not in', ['draft', 'confirm'])]}"
                            confirm="Cancel batch. Are you sure?"
                        />
                        <button
                            name="action_restart"
                            type="object"
                            string="Restart"
                            attrs="{'invisible':[('state','&lt;&gt;', 'cancel')]}"
                            confirm="Restart batch. Are you sure?"
                        />
                        <field
                            name="state"
                            widget="statusbar"
                            statusbar_visible="draft,confirm,generate,cancel"
                        />
                    </header>
                    <sheet>
                        <div
                            class="oe_right oe_button_box"
                            style="width: 300px;"
                            name="buttons"
                        >
                        </div>
                        <div class="oe_left" style="width: 500px;">
                            <div class="oe_title" style="width: 500px;">
                                <label for="name" />
                                <h1>
                                    <field name="name" class="oe_edit_only" />
                                    <field name="display_name" class="oe_read_only" />
                                </h1>
                            </div>
                        </div>
                        <group name="header" colspan="4" col="2">
                            <group name="header_left" colspan="1" col="2">
                                <field
                                    name="company_id"
                                    groups="base.group_multi_company"
                                />
                                <field name="user_id" />
                                <field name="type_id" />
                            </group>
                            <group name="header_right" colspan="1" col="2">
                                <field name="date" />
                            </group>
                        </group>
                        <notebook>
                            <page name="page_ematerai" string="E-Materai(s)">
                                <group name="grp_1">
                                    <field name="all_success" />
                                </group>
                                <field name="ematerai_ids" colspan="4" nolabel="1">
                                    <tree>
                                        <field name="date" readonly="1" />
                                        <field name="ref" readonly="1" />
                                        <field
                                            name="original_attachment_id"
                                            invisible="1"
                                        />
                                        <field
                                            name="original_datas_fname"
                                            invisible="1"
                                        />
                                        <field
                                            name="original_attachment_data"
                                            widget="binary"
                                            filename="original_datas_fname"
                                        />
                                        <field
                                            name="ematerai_attachment_id"
                                            invisible="1"
                                        />
                                        <field
                                            name="ematerai_datas_fname"
                                            invisible="1"
                                        />
                                        <field
                                            name="ematerai_attachment_data"
                                            widget="binary"
                                            filename="ematerai_datas_fname"
                                        />
                                        <field name="err_msg" readonly="1" />
                                        <field name="state" readonly="1" />
                                        <button
                                            name="action_generate_ematerai"
                                            string="Generate E-Materai"
                                            type="object"
                                            icon="gtk-apply"
                                            confirm="Generate E-Materai. Are you sure?"
                                            attrs="{'invisible':[('state','=', 'success')]}"
                                        />
                                    </tree>
                                </field>
                            </page>
                            <page name="response" string="Response">
                                <field name="response_msg" colspan="4" nolabel="1" />
                            </page>
                            <page name="note" string="Note">
                                <field name="note" colspan="4" nolabel="1" />
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>
    </data>
</openerp>
