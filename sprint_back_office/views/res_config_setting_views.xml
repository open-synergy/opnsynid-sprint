<openerp>
<data>

<record id="sprint_backoffice_config_setting_view_form" model="ir.ui.view">
    <field name="name">sprint.backoffice.config.setting.view.form</field>
    <field name="model">sprint.backoffice_config_setting</field>
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <form class="oe_form_configuration">
            <header>
                <button
                            name="execute"
                            string="Apply"
                            type="object"
                            class="oe_highlight"
                        />
                or
                <button name="cancel" string="Cancel" type="object" class="oe_link" />
            </header>
            <field name="company_id" invisible="1" />
            <separator string="Back-Office" />
            <group name="sprint_backoffice_config">
                <label for="id" string="General" />
                <div>
                    <div>
                        <label
                                    for="sp_backoffice_url"
                                    string="Base URL"
                                    class="oe_inline"
                                />
                        <field name="sp_backoffice_url" class="oe_inline" />
                    </div>
                </div>
                <label for="id" string="API" />
                <div name="div_api">
                </div>
            </group>
        </form>
    </field>
</record>


<record id="sprint_backoffice_config_setting_action" model="ir.actions.act_window">
    <field name="name">Sprint Back Office Configuration</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">sprint.backoffice_config_setting</field>
    <field name="view_type">form</field>
    <field name="target">inline</field>
    <field name="view_mode">form</field>
</record>

<menuitem
            id="sprint_backoffice_config_setting_menu"
            name="Sprint Back Office"
            parent="base.menu_config"
            action="sprint_backoffice_config_setting_action"
            sequence="100"
        />


</data>
</openerp>
