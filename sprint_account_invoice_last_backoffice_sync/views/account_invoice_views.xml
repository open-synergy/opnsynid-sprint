<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="account_invoice_view_search" model="ir.ui.view">
            <field name="name">account.invoice.last.backoffice.sync.search</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='unpaid']" position="after">
                    <filter
                        name="need_tax_comp"
                        string="Need Tax Computation"
                        domain="[('need_tax_computation','=', True)]"
                    />
                </xpath>
            </field>
        </record>

        <record id="account_invoice_view_form" model="ir.ui.view">
            <field name="name">account.invoice.last.backoffice.sync.form</field>
            <field name="model">account.invoice</field>
            <field name="priority" eval="100" />
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@string='Other Info']" position="inside">
                    <group>
                        <field name="last_backoffice_sync" />
                        <field name="last_tax_computation" />
                        <field name="need_tax_computation" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
