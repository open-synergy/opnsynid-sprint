<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="account_invoice_view_form" model="ir.ui.view">
            <field name="name">account.invoice.receipt.update.backoffice.form</field>
            <field name="model">account.invoice</field>
            <field name="priority" eval="100" />
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[last()]" position="after">
                    <page string="Update Print Info" groups="base.group_user">
                        <button
                            name="action_manual_update_print_info"
                            string="Update Print Info"
                            type="object"
                            attrs="{'invisible': [('state', 'in', ['draft', 'cancel', 'paid'])]}"
                        />
                        <group>
                        <field name="update_print_info_ids" nolabel="1">
                            <tree>
                                <field name="date" />
                                <field name="status_code" />
                                <field name="status_msg" />
                            </tree>
                        </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
