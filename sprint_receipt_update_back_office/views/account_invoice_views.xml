<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="account_invoice_view_form" model="ir.ui.view">
            <field name="name">account.invoice.receipt.update.backoffice.form</field>
            <field name="model">account.invoice</field>
            <field name="priority" eval="100" />
            <field name="inherit_id" ref="account.invoice_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_ids']" position="after">
                    <separator string="Update Payment History" colspan="4" />
                    <button
                        name="action_manual_update_payment"
                        string="Update Payment"
                        type="object"
                        attrs="{'invisible': [('state', 'in', ['draft', 'cancel', 'paid'])]}"
                    />
                    <group>
                        <field name="update_payment_history_ids" nolabel="1">
                            <tree>
                                <field name="date" />
                                <field name="source" />
                                <field name="status_code" />
                                <field name="status_msg" />
                            </tree>
                        </field>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
